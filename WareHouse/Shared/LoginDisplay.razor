<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage" class="text-white" style="margin-right: 10px;">
            Hello, @context.User.Identity?.Name
        </a>
        <form method="post" action="Identity/Account/LogOut" style="display: inline;">
            <button type="submit" class="nav-link btn btn-link text-white">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register" class="text-white">Register</a>&nbsp;&nbsp;
        <a href="Identity/Account/Login" class="text-white">Log in</a>
    </NotAuthorized>
</AuthorizeView>
